{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@layers/core": ["packages/@layers/core/src"],
      "@layers/core/*": ["packages/@layers/core/src/*"],
      "@layers/ui": ["packages/@layers/ui/src"],
      "@layers/ui/*": ["packages/@layers/ui/src/*"],
      "@layers/hooks": ["packages/@layers/hooks/src"],
      "@layers/hooks/*": ["packages/@layers/hooks/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", ".next", "out"]
}
