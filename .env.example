# ===========================================
# Layers Development Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# -------------------------------------------
# Supabase (Database & Auth)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# AI Providers (via Vercel AI Gateway)
# -------------------------------------------
# Vercel AI Gateway API Key (preferred - unified access to all providers)
VERCEL_AI_GATEWAY_KEY=vai_...

# Or use direct API keys for individual providers
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_AI_API_KEY=...
XAI_API_KEY=xai-...
DEEPSEEK_API_KEY=sk-...
PERPLEXITY_API_KEY=pplx-...

# -------------------------------------------
# E2B Sandbox (Code Execution)
# -------------------------------------------
E2B_API_KEY=e2b_...

# -------------------------------------------
# Stripe (Payments & Credits)
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -------------------------------------------
# Application
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
